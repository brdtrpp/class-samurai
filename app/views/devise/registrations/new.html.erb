<section id="main-content">
  <div class="row-fluid">
    <div class="col-md-4 col-md-offset-4 col-xs-12">
      <div id="login-wrapper">
        <div class="panel panel-primary">    
          <div class="panel-heading">
            <h3 class="panel-title">SIGN UP</h3>
          </div>
        <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              
              <div class="form-group">
                <%= devise_error_messages! %>
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %></br>
                <% if @validatable %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %></br>
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %></br>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Again" %></br>
              </div>
                      
              <%= f.submit "Sign up", class: "form-control btn btn-primary" %>
  
            <% end %>
          </div>
          <div class="panel-footer">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


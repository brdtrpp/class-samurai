<section id="main-content">
  <div class="row-fluid">
    <div class="col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4
    col-lg-offset-4 col-xs-12">
    <div class="panel panel-default">    
      <div class="panel-heading">
        <h3 class="panel-title">SIGN UP</h3>
      </div>
      <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            
            <div class="form-group">
              <%= devise_error_messages! %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
              <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Again" %>
              
              <h3><center>User Roles</center></h3>
              <%= f.label(:admin) do %>
                Administrator:
                <%= hidden_field_tag(:admin, 0) %>
                <%= check_box_tag(:admin, 1, @user.has_role?(:admin)) %>
              <% end %>
              <%= f.label(:staff) do %>
                Staff:
                <%= hidden_field_tag(:staff, 0) %>
                <%= check_box_tag(:staff, 1, @user.has_role?(:staff)) %>
              <% end %>
              <%= f.label(:instructor) do %>
                Instructor:
                <%= hidden_field_tag(:instructor, 0) %>
                <%= check_box_tag(:instructor, 1, @user.has_role?(:instructor)) %>
              <% end %>
              <%= f.label(:guardian) do %>
                Guardian:
                <%= hidden_field_tag(:guardian, 0) %>
                <%= check_box_tag(:guardian, 1, @user.has_role?(:guardian)) %>
              <% end %>
            </div>
                    
            <%= f.submit "Sign up", class: "form-control btn btn-primary" %>

          <% end %>
          
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>

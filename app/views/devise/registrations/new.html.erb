<div class="row-fluid">
  <div class="col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4
  col-lg-offset-4 col-xs-8 col-xs-offset-2 text-center">
    <div>

    <h1>Sign up</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Again" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up", class: "form-control" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
<% provide(:title, @user.first_name ) %>
<section id="main-content">
  <div class="row-fluid">
    <div class="col-md-10 col-md-offset-1">
      <h1><%= @user.first_name %> <% @user.last_name %>'s Profile <%= render 'layouts/modals/name' %></h1>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-4">
              <h2>Picture</h2>
            </div>
            <div class='col-md-4'>
              <h2>Address <%= render 'layouts/modals/address' %></h2>
              <%= @user.address.address1 %></br>
              <%= @user.address.address2 %></br>
              <%= @user.address.city %></br>
              <%= @user.address.state %></br>
              <%= @user.address.zip_code %></br>
            </div>
            <div class="col-md-4">
              <span><h2>Basic Informaiton <%= render 'layouts/modals/login' %></h2>
              <%= @user.email %></br>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <h2>Biography</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
   </div>
  </div>
  <div class='row'>
    <div class='col-md-4 col-md-offset-4'>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "form-control btn btn-default" %>
      <%= link_to "Back", :back %>
    </div>
  </div>
</section>
<%= form_for :user do |f| %>
  <%= render 'address/partials/form' %>
  <%= f.submit "Save Changes", class: "btn btn-primary" %>
<% end %>



<section id="main-content" class="animated fadeInUp">
  <p id="notice"><%= notice %></p>
  <% @facilities.each do |facility| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title"><%= link_to facility.name, facility %></h3>
            <div class="actions pull-right">
              <i class="fa fa-chevron-down"></i>
              <i class="fa fa-times"></i>
            </div>
        </div>
        <div class="panel-body">
          <center>
            <%= facility.description %>
          </center>
        </div>
        <div class="panel-footer">
          <%= link_to 'Edit', edit_facility_path(facility) %>
          <%= link_to 'Delete', facility, :method => 'delete', data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  <% end %>

<div class="col-sm-12 col-md-6 col-lg-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= link_to 'Start a new facility', new_facility_path%>
      </h3>
    </div>
    <div class="panel-body">
      <center>
        <%= link_to 'New Facility', new_facility_path%>
      </center>
    </div>
</div>
</section>